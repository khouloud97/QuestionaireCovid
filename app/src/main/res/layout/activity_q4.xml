<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/q2"
    tools:context=".Q4" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="427dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/qsm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:text="Avez-vous une fatigue inhabituelle ces derniers jours ?"
            android:textColor="#461D36"
            android:textAlignment="center"            android:textSize="24sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radio">

            <Space
                android:layout_width="match_parent"
                android:layout_height="65dp" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:text="OUI"            android:textColor="#461D36"

                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:text="NON"            android:textColor="#461D36"

                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="46dp" />

            <Button
                android:id="@+id/btn_s1"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:background="#81A1BEE2"
                android:textColor="#FA090808"
                android:text="Suivant"
                />

        </RadioGroup>

    </LinearLayout>

</RelativeLayout>